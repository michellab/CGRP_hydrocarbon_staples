source leaprc.protein.ff19SB
loadamberparams add-ff.frcmod
loadoff S51.lib
loadoff S52.lib
source leaprc.water.opc
loadamberparams frcmod.ionslm_126_opc

foo = loadpdb PDBfile_ready_for_tleap.pdb 

bond foo.496.CY foo.500.CY

solvatebox foo OPCBOX 20.0
addionsrand foo Na+ 20
addionsrand foo Cl- 20
addionsrand foo Na+ 0
addionsrand foo Cl- 0

saveamberparm foo peptide4_water.prmtop peptide4_water.inpcrd
savepdb foo peptide4_water_fromtleap.pdb
quit
